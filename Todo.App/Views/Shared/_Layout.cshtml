@using Microsoft.Extensions.Options;
@using Todo.App.Configuration;
@inject IOptions<ApplicationConfigurations> OptionsApplicationConfiguration

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Todo.App</title>
    <base href="~/" api="@OptionsApplicationConfiguration.Value.ApiUrl" proxy="@OptionsApplicationConfiguration.Value.ProxyUrl" />

    <link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/dist/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/dist/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/dist/toastr.css" asp-append-version="true" />
</head>
<body>
    @RenderBody()
    @RenderSection("scripts", required: false)
</body>
</html>
